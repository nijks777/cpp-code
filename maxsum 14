using namespace std;
int main() {
    int n;
    cin>>n;
    int arr[n];
    for(int i=0; i<n;i++)
        {
        cin>>arr[i];
        }
    int sum =0;
    int s=0;
    for(int i=0;i<n;i++)
        {
        
        s=s+arr[i];
        if(s>sum)
        sum =s;
        if(s<0)
            s=0;
    
        }
    cout<<sum;
            
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    return 0;
}
